<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="#000"
			  android:orientation="vertical">

	<com.isseiaoki.simplecropview.CropImageView
		android:id="@+id/cropImageView"
		xmlns:custom="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		custom:backgroundColor="#000000"
		custom:overlayColor="#66000000"
		custom:frameColor="@color/crop_frame_color"
		custom:handleColor="@color/crop_frame_color"
		custom:guideColor="#BBFFFFFF"
		custom:frameStrokeWeight="2dp"
		custom:handleSize="8dp"
		custom:touchPadding="8dp"
		custom:guideShowMode="not_show"
		custom:handleShowMode="show_always"
		custom:cropEnabled="true"/>

	<Button
		android:layout_gravity="center_horizontal|bottom"
		android:id="@+id/ready"
		android:text="Готово"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</FrameLayout>